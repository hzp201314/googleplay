<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--白色卡片区域-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:background="@drawable/selector_list_item">
        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/ic_default"
                android:id="@+id/iv_image"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="有缘千里来相会"
                    android:textSize="16sp"
                    android:textColor="@color/txt_title"
                    android:singleLine="true"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:progressDrawable="@drawable/ratingbar_drawable"
                    style="@android:style/Widget.RatingBar"
                    android:id="@+id/rb_star"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:isIndicator="true"/>
                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.1MB"
                    android:textSize="14sp"
                    android:textColor="@color/txt_small"
                    android:singleLine="true"
                    />
            </LinearLayout>
        </LinearLayout>
        <!--线-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/txt_small"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
        <!--描述-->
        <TextView
            android:id="@+id/tv_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，描述信息，"
            android:textSize="14sp"
            android:textColor="@color/txt_small"
            android:singleLine="true"/>
    </LinearLayout>
</LinearLayout>